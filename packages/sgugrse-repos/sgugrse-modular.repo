[sgugrse-modular]
name=Sgugrse Modular $releasever - $basearch
#baseurl=http://download.example/pub/sgugrse/linux/releases/$releasever/Modular/$basearch/os/
metalink=https://mirrors.sgugrsetest.org/metalink?repo=sgugrse-modular-$releasever&arch=$basearch
enabled=1
#metadata_expire=7d
repo_gpgcheck=0
type=rpm
gpgcheck=1
gpgkey=file:///usr/sgug/etc/pki/rpm-gpg/RPM-GPG-KEY-sgugrse-$releasever-$basearch
skip_if_unavailable=False

