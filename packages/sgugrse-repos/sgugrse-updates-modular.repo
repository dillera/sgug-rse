[updates-modular]
name=Sgugrse Modular $releasever - $basearch - Updates
#baseurl=http://download.example/pub/sgugrse/linux/updates/$releasever/Modular/$basearch/
metalink=https://mirrors.sgugrsetest.org/metalink?repo=updates-released-modular-f$releasever&arch=$basearch
enabled=1
repo_gpgcheck=0
type=rpm
gpgcheck=1
metadata_expire=6h
gpgkey=file:///usr/sgug/etc/pki/rpm-gpg/RPM-GPG-KEY-sgugrse-$releasever-$basearch
skip_if_unavailable=False

